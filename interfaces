# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback

auto eth0 
iface eth0 inet static
	address 192.168.1.32
	netmask 255.255.255.0
	network 192.168.1.0
	broadcast 192.168.1.254
	gateway 192.168.1.1
	
auto eth 0:0
iface eth0 inet static
	address 192.168.1.2
	netmask 255.255.255.0

